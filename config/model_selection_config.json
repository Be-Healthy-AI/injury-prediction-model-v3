{
  "feature_selection": {
    "correlation_threshold": 0.95,
    "k_values": [50, 100, 150, 200, 300],
    "univariate_methods": ["chi2", "mutual_info", "f_test"],
    "rfe_cv_folds": 3,
    "tree_importance_estimators": 100
  },
  "optuna": {
    "n_trials": 100,
    "timeout": null,
    "pruning": true,
    "pruner_type": "MedianPruner",
    "n_jobs": -1,
    "study_storage": "sqlite:///models/optimized/optuna_studies.db"
  },
  "models": {
    "random_forest": {
      "n_estimators": [100, 200, 300, 500],
      "max_depth": [10, 15, 20, 25, 30, null],
      "min_samples_split": [2, 5, 8, 10, 15],
      "min_samples_leaf": [1, 2, 4, 6],
      "max_features": ["sqrt", "log2", null]
    },
    "gradient_boosting": {
      "n_estimators": [100, 200, 250, 300],
      "max_depth": [5, 10, 15, 20],
      "learning_rate": [0.01, 0.05, 0.1, 0.15, 0.2],
      "min_samples_split": [5, 10, 15, 20],
      "subsample": [0.8, 0.9, 1.0]
    },
    "xgboost": {
      "n_estimators": [100, 200, 300],
      "max_depth": [3, 5, 7, 10, 15],
      "learning_rate": [0.01, 0.05, 0.1, 0.15],
      "subsample": [0.8, 0.9, 1.0],
      "colsample_bytree": [0.8, 0.9, 1.0],
      "reg_alpha": [0, 0.1, 0.5, 1.0],
      "reg_lambda": [0, 0.1, 0.5, 1.0]
    },
    "lightgbm": {
      "n_estimators": [100, 200, 300],
      "max_depth": [3, 5, 7, 10, 15, -1],
      "learning_rate": [0.01, 0.05, 0.1, 0.15],
      "num_leaves": [15, 31, 50, 100],
      "subsample": [0.8, 0.9, 1.0],
      "colsample_bytree": [0.8, 0.9, 1.0],
      "reg_alpha": [0, 0.1, 0.5, 1.0],
      "reg_lambda": [0, 0.1, 0.5, 1.0]
    },
    "catboost": {
      "iterations": [100, 200, 300],
      "depth": [4, 6, 8, 10],
      "learning_rate": [0.01, 0.05, 0.1, 0.15],
      "l2_leaf_reg": [1, 3, 5, 7],
      "border_count": [32, 64, 128]
    },
    "logistic_regression": {
      "C": [0.001, 0.01, 0.1, 1.0, 10.0, 100.0],
      "penalty": ["l1", "l2", "elasticnet"],
      "solver": ["lbfgs", "liblinear", "saga"],
      "max_iter": [1000, 2000, 5000]
    }
  },
  "evaluation": {
    "primary_metric": "f1_score",
    "metrics": ["accuracy", "precision", "recall", "f1", "roc_auc", "gini"],
    "validation_sets": ["train", "validation_insample", "validation_outsample"]
  },
  "parallel_execution": {
    "n_jobs": -1,
    "backend": "loky",
    "verbose": 10
  },
  "paths": {
    "feature_sets_dir": "feature_sets",
    "models_dir": "models/optimized",
    "analysis_dir": "analysis"
  }
}


